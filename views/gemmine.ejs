      .querySelector(".button")
      .addEventListener("click", () => {
        setInterval(updateTimer, 1000);
      });

      */
    document.querySelector(".collect").addEventListener("click", () => {
      console.log("clicked");
    });

    finished = true;

    if (finished === true) {
      gems++;
    }
  </script>
</html>
